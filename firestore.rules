
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /events/{eventId} {
      // Allow public read access to single documents for sharing.
      allow get: if true;

      // Allow authenticated users to list events for their dashboard.
      // And ensure they can only list their own events if a query is made on userId.
      allow list: if request.auth != null;

      // Allow authenticated users to create events, ensuring they set themselves as the owner.
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;

      // Allow users to update or delete only their own events.
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }
  }
}
