rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /events/{eventId} {
      // Allow anyone to read a single event document for sharing purposes.
      allow get: if true;

      // Allow only authenticated users to list events.
      // This rule is not used by the app currently but is good practice.
      allow list: if request.auth != null;

      // Allow only authenticated users to create events.
      allow create: if request.auth.uid == request.resource.data.userId;

      // Allow only the user who owns the event to update or delete it.
      allow update, delete: if request.auth.uid == resource.data.userId;
    }
  }
}
